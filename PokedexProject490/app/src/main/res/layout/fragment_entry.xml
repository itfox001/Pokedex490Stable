<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cis490.ianharrison.pokedex490.EntryActivity"
    android:background="#ffc10d20"
    android:id="@+id/entry_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_textView"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:maxLines="9"
        android:background="#FFFFFF"
        android:minLines="9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/species_textView"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:background="#FFFFFF"
        android:layout_below="@+id/name_textView"
        android:layout_alignEnd="@+id/name_textView"
        android:maxWidth="170dp"
        android:textColor="#000000"
        android:singleLine="true"
        android:maxLines="2"
        android:minLines="2"
        android:minWidth="170dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_textView"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/description_textView"
        android:background="#FFFFFF"
        android:textAlignment="center"
        android:textColor="#000000"
        android:maxWidth="170dp"
        android:textSize="20sp"
        android:minWidth="170dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/height_textView"
        android:layout_below="@+id/species_textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:maxWidth="200dp"
        android:background="#FFFFFF"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weight_textView"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/height_textView"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:textSize="25sp"
        android:maxWidth="200dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:maxWidth="200dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/species_textView"
        android:layout_alignTop="@+id/name_textView"
        android:minHeight="200dp" />
</RelativeLayout>
